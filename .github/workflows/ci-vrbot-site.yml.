name: CI - vrbot-site (Next.js)

on:
  push:
    branches: [ "main" ]
    paths:
      - "vrbot-site/**"
      - ".github/workflows/ci-vrbot-site.yml"
  pull_request:
    branches: [ "main" ]
    paths:
      - "vrbot-site/**"
      - ".github/workflows/ci-vrbot-site.yml"

jobs:
  build:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: vrbot-site

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
          cache-dependency-path: vrbot-site/package-lock.json

      - name: Install
        run: npm ci

      - name: Lint
        run: npm run lint --if-present

      - name: Build
        run: npm run build
