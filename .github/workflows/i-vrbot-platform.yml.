name: CI - vrbot-platform (API)

on:
  push:
    branches: [ "main" ]
    paths:
      - "vrbot-platform/**"
      - ".github/workflows/ci-vrbot-platform.yml"
  pull_request:
    branches: [ "main" ]
    paths:
      - "vrbot-platform/**"
      - ".github/workflows/ci-vrbot-platform.yml"

jobs:
  build:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: vrbot-platform/apps/api

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: "20"
          cache: "npm"
          cache-dependency-path: vrbot-platform/apps/api/package-lock.json

      - name: Install
        run: npm ci

      - name: Prisma generate
        run: npm run prisma:generate

      - name: Build
        run: npm run build
